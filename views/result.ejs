<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
      integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/dashboardForms.css" />
    <title>Dashboard | results</title>
  </head>
  <body>
    <div class="form-style">
      <form method="post" id="result-form">
        <div class="form-group row">
          <label class="col-sm-2 col-form-label label-style"
            >Select Class Id</label
          >
          <div class="col-sm-10">
            <select class="text-style myDropDown" id="dropdown-classid" name="class_id">
              <option value="">- Select Class Id -</option>
              <% classes.forEach(function(classId){ %>
              <option><%- classId._id %></option>
              <% }); %>
            </select>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label label-style"
            >Enrolment_no</label
          >
          <div class="col-sm-10">
            <input
              type="number"
              class="form-control text-style"
              placeholder="Enter enrolment no"
              name="enrolment_no"
            />
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-10">
            <button
              type="submit"
              class="btn btn-dark"
              style="width: 125px; margin-top: 25px"
            >
              Add Result
            </button>
          </div>
        </div>
      </form>
    </div>
    <script src="/js/resultDashboard.js"></script> 
  </body>
</html>
