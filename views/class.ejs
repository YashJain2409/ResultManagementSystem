<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
      integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="/dashboardForms.css" />
    <title>Dashboard | Classes</title>
  </head>
  <body>
    <div class="form-style">
      <form method="post">
        <div class="form-group row">
          <label class="col-sm-2 col-form-label label-style"
            >Enter Class id:
          </label>
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control text-style"
              placeholder="class id"
              name="cid"
            />
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label label-style"
            >Enter Branch</label
          >
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control text-style"
              placeholder="branch"
              name="branch"
            />
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label label-style">Enter Sem</label>
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control text-style"
              placeholder="Semester"
              name="sem"
            />
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label label-style"
            >Enter Subjects</label
          >
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control text-style"
              placeholder="Enter subjects"
              name="subjects"
              spellcheck="false"
            />
            <small class="form-text text-muted"
              >(Comma seperated)</small
            >
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-10">
            <button type="submit" class="btn btn-dark" style="width: 125px">
              Add Class
            </button>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
